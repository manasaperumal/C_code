#include <stdio.h>
#include <stdlib.h>
#include <limits.h>

// Comparator function for qsort
int compare(const void *a, const void *b) {
    return ((int)a - (int)b);
}

int main() {
    int T;
    scanf("%d", &T);
    
    while (T--) {
        int N;
        scanf("%d", &N);
        
        int arr[N];
        int valid = 1;
        
        for (int i = 0; i < N; i++) {
            scanf("%d", &arr[i]);
            if (arr[i] < 1 || arr[i] > 100000) {
                valid = 0;
            }
        }
        
        if (!valid) {
            printf("Invalid value in array!!!\n");
            continue;
        }
        
        // Sort the array
        qsort(arr, N, sizeof(int), compare);
        
        int min_diff = INT_MAX;
        for (int i = 1; i < N; i++) {
            int diff = arr[i] - arr[i - 1];
            if (diff < min_diff)
                min_diff = diff;
        }
        
        printf("%d\n", min_diff);
    }

    return 0;
}
